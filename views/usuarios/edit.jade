extends ../layout

block content
        h1 Atualizar Usu√°rio
        hr
        br
        if messages.erro
            div(class="alert alert-danger")
                each msg in messages.erro
                    b= msg
                    br
        form(method="post", action="/usuarios/edit/#{model._id}", role="form")
            div(class="form-group")
                label Nome
                input(type="text", class="form-control", name="nome", placeholder="Nome", value="#{model.nome}")
            div(class="form-group")
                label Email
                input(type="email", class="form-control", name="email", placeholder="Email", value="#{model.email}")
            div(class="form-group")
                label Site
                input(type="text" class="form-control" name="site", placeholder="Site", value="#{model.site}")
            div(class="form-group")
                label Senha
                input(type="password" class="form-control" name="password", placeholder="Senha" required)
            div(class="form-group")
                label Confirmar Senha
                input(type="password" class="form-control" name="password_confirmar", placeholder="Confirmar Senha" required)
            button(type="submit", class="btn btn-success") Salvar
            span &nbsp;
            a(href="/usuarios" class="btn btn-primary") Voltar