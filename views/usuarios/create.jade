extends ../layout

block content
    h1 Cadastro de usu√°rios
    hr
    br
    if messages.erro
        div(class="alert alert-danger")
            each msg in messages.erro
                b= msg
                br
        br
    form(method="post", action="/usuarios/create", role="form")
        div(class="form-group")
            label Nome
            input(type="text", class="form-control", name="nome", value="#{user.nome || ''}", placeholder="Nome", autofocus required)
        div(class="form-group")
            label Email
            input(type="email", class="form-control", name="email", value="#{user.email || ''}", placeholder="Email" required)
        div(class="form-group")
            label Site
            input(type="text" class="form-control" name="site", placeholder="Site", value="#{user.site || 'http://'}")
        div(class="form-group")
            label Senha
            input(type="password" class="form-control" name="password", placeholder="Senha" required)
        div(class="form-group")
            label Confirmar Senha
            input(type="password" class="form-control" name="password_confirmar", placeholder="Confirmar Senha" required)
        button(type="submit", class="btn btn-success") Salvar
        span &nbsp;
        a(href="/usuarios" class="btn btn-primary") Voltar