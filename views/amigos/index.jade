extends ../layout

block content
    h1 Amigos
    a(href="/amigos/create", class="btn btn-success") Cadastrar
    br
    br
    if messages.erro
        div(class="alert alert-danger")
            p #{messages.erro}
        br
    if messages.info
        div(class="alert alert-success")
            p #{messages.info}
        br
    if lista.length > 0
        table(class="table table-striped")
            thead
                tr
                    th ID:
                    th Nome:
                    th Email:
                    th Data:
                    th Ações:
            tbody
                each valor in lista
                    tr
                        td #{valor._id}
                        td #{valor.nome}
                        td #{valor.email}
                        td #{moment(valor.data_cad).format('DD/MM/YYYY HH:MM:ss')}
                        td
                            a(href="/amigos/show/#{valor._id}", class="btn btn-info")
                                span(class="glyphicon glyphicon-search")
                            span &nbsp;
                            a(href="/amigos/edit/#{valor._id}", class="btn btn-primary")
                                span(class="glyphcon glyphicon-pencil")
                            span &nbsp;
                            a(href="/amigos/delete/#{valor._id}", class="btn btn-danger" id="excluir-form")
                                span(class="glyphicon glyphicon-trash")
                            span &nbsp;
                            a(href="/contatos/#{valor._id}", class="btn btn-success")
                                span(class="glyphicon glyphicon-plus")
    else
        p Nenhum registro encontrado!

block scripts
    script(type="text/javascript").
        $(function(){
            $('#excluir-form').click(function(){
                var pergunta = confirm('Deseja realmente excluir ?');
                if(!pergunta){
                   return false;
                }
            });
        });