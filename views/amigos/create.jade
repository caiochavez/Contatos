extends ../layout

block content
    h1 Cadastro de amigos
    hr
    br
    if messages.erro
        div(class="alert alert-danger")
            each msg in messages.erro
                b= msg
                br
        br
    form(method="post", action="/amigos/create", role="form")
        div(class="form-group")
            label Nome
            input(type="text", class="form-control", name="nome", value="#{model.nome || ''}", placeholder="Nome", autofocus)
        div(class="form-group")
            label Email
            input(type="email", class="form-control", name="email", value="#{model.email || ''}", placeholder="Email")
        button(type="submit", class="btn btn-success") Salvar
        span &nbsp;
        a(href="/amigos" class="btn btn-primary") Voltar