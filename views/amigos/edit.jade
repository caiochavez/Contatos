extends ../layout

block content
        h1 Atualizar Amigo
        hr
        br
        if messages.erro
            div(class="alert alert-danger")
                each msg in messages.erro
                    b= msg
                    br
        form(method="post", action="/amigos/edit/#{model._id}", role="form")
            div(class="form-group")
                label Nome
                input(type="text", class="form-control", name="nome", placeholder="Nome", value="#{model.nome}")
            div(class="form-group")
                label Email
                input(type="email", class="form-control", name="email", placeholder="Email", value="#{model.email}")
            button(type="submit", class="btn btn-success") Salvar
            span &nbsp;
            a(href="/amigos" class="btn btn-primary") Voltar