extends ../layout

block content
    h1 Envio de Email
    hr
    if messages.erro
        div(class="alert alert-danger")
            each msg in messages.erro
                b= msg
                br
        br
    if messages.info
        div(class="alert alert-success")
            p #{messages.info}
        br 
    form(method="post" action="/email" role="form")
        div(class="form-group")
            label Nome
            input(type="text" name="nome" class="form-control" placeholder="Nome" required)
        div(class="form-group")
            label Email
            input(type="email" name="email" class="form-control" placeholder="Email" required)
        div(class="form-group")
            label Assunto
            input(type="text" name="assunto" class="form-control" placeholder="Assunto" required)
        div(class="form-group")
            label Mensagem
            textarea(rows="5" cols="5" name="mensagem" class="form-control" required)
        button(type="submit" class="btn btn-success") Enviar

